<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottoms_sheet_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/greenDark"
            android:padding="@dimen/_10mdp">
            <ImageView
                android:layout_width="@dimen/_18mdp"
                android:layout_height="@dimen/_18mdp"
                app:tint="@color/white"
                android:src="@drawable/double_arrow_right_24"
                android:layout_margin="@dimen/_5mdp"/>
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/_12font_mdp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Edit Rules"/>
            <ImageView
                android:id="@+id/closeDialog"
                android:layout_width="@dimen/_18mdp"
                android:layout_height="@dimen/_18mdp"
                app:tint="@color/white"
                android:src="@drawable/close_24"
                android:layout_margin="@dimen/_5mdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10mdp"
            android:paddingStart="@dimen/_10mdp"
            android:paddingEnd="@dimen/_10mdp">
            <EditText
                android:id="@+id/fRules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_10mdp"
                android:hint="Enter firsts set of rules..."
                android:minLines="5"
                android:gravity="top"
                android:textColor="@color/black"
                android:inputType="textMultiLine"
                android:textSize="@dimen/_11font_mdp"
                android:layout_marginTop="@dimen/_10mdp"
                android:background="@drawable/bg_gray"/>
            <EditText
                android:id="@+id/sRules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minLines="5"
                android:textColor="@color/black"
                android:textSize="@dimen/_11font_mdp"
                android:padding="@dimen/_10mdp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:hint="Enter second set of rules..."
                android:layout_marginTop="@dimen/_10mdp"
                android:background="@drawable/bg_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10mdp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/checkIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11font_mdp"
                    android:padding="@dimen/_10mdp"
                    android:inputType="text"
                    android:hint="Check In"
                    android:layout_marginEnd="@dimen/_5mdp"
                    android:background="@drawable/bg_gray"/>
                <EditText
                    android:id="@+id/checkOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11font_mdp"
                    android:padding="@dimen/_10mdp"
                    android:layout_marginStart="@dimen/_5mdp"
                    android:inputType="text"
                    android:hint="Check Out"
                    android:background="@drawable/bg_gray"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10mdp"
                android:text="Save"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>